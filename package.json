{
  "name": "oas-loader",
  "version": "0.3.0",
  "description": "Open API spec webpack loader",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "compile:publish": "tsc -p tsconfig-publish.json",
    "lint:base": "eslint -c ./.eslintrc --ext .ts --ext .js src",
    "lint": "npm run lint:base src",
